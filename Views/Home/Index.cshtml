@model Moment2Mvc.Models.CurrencyConverterModel
<h2>Valutakonverterare</h2>

<form method="post">
    <label asp-for="Amount"></label>
    <input type="number" step="0.01" asp-for="Amount">
    <span asp-validation-for="Amount"></span>
    <br>
    <label asp-for="FromCurrency"></label>
    <select asp-for="FromCurrency">
        <option value="SEK">SEK</option>
        <option value="EUR">EUR</option>
        <option value="USD">USD</option>
    </select>
    <br>
    <label asp-for="ToCurrency"></label>
    <select asp-for="ToCurrency">
        <option value="SEK">SEK</option>
        <option value="EUR">EUR</option>
        <option value="USD">USD</option>
    </select>
    <br>
    <label asp-for="ExchangeRate"></label>
    <input type="number" step="0.01" asp-for="ExchangeRate">
    <span asp-validation-for="ExchangeRate"></span>
    <br>
    <input type="submit" value="Konvertera">
</form>